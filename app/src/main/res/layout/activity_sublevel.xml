<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySublevel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/lineactsubniv"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/plomo"/>

            <View
                android:id="@+id/Viewfondo1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/lineactsubniv"
                android:background="@color/principal" />

            <View
                android:id="@+id/Viewfondo2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Viewfondo1"
                android:background="@drawable/ic_down" />

            <TextView
                android:id="@+id/lblTiTleSubNiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-black"
                android:shadowColor="@color/secundario"
                android:shadowRadius="4"
                android:text="@string/subniveles"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgNiv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/subnivel"
                app:civ_border_color="@color/plomo"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/white" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/lblSubNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:text="Subnivel"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/secundario"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtSubNiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subnivel"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/buscar"
            android:layout_width="40dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/icon_search" />

    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listSubnivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSubNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_add"
        app:maxImageSize="30dp"
        app:backgroundTint="@color/principal"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>