<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Frg_ArrastrarSoltar"
    android:id="@+id/fragemntFinal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:textAlignment="center"
                android:fontFamily="@font/baloo"
                android:textStyle="bold"
                android:shadowColor="@color/secundario"
                android:shadowRadius="4"
                android:text="Arastrar/Soltar respuesta"
                android:textColor="@color/secundario"
                android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:layout_weight="1">

                    <ListView
                        android:id="@+id/lstEnunciado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"/>

                    <LinearLayout
                        android:id="@+id/destino"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal"
                        android:background="@drawable/dotted_line"
                        android:tag="respuesta">

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Lcomprobar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:gravity="bottom"
                    android:layout_weight="4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/verdeclaro" />

                        <TextView
                            android:id="@+id/txtResponse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="20dp"
                            android:drawableEnd="@drawable/icon_valor"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/baloo"
                            android:shadowColor="@color/secundario"
                            android:shadowRadius="2"
                            android:text="@string/correcto"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_comprobar_actividades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/principal"
                        android:fontFamily="@font/baloo"
                        android:text="@string/comprobar"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>