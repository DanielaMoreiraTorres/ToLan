<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".ActivityRegisterUser"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/principal" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view6"
            android:background="@drawable/ic_down" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-black"
                android:shadowColor="@color/secundario"
                android:shadowRadius="2"
                android:text="@string/reg"
                android:textColor="@color/white"
                android:textSize="24sp" />

    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dtperson"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-black"
                        android:shadowColor="@color/secundario"
                        android:shadowRadius="0.6"
                        android:textColor="@color/principal"
                        android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lnombres"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Nombres">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/nombres"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:drawableStart="@drawable/user_name"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="textPersonName"
                                    android:maxLength="50"

                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lapellidos"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Apellidos">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/apellidos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/user_name"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="textPersonName"
                                    android:maxLength="50"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Ltelefono"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Teléfono">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/telefono"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_phone"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="phone"
                                    android:maxLength="16"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lemail"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Correo">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_email_24"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="100"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/LFechaNac"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="aaaa-MM-dd"
                                app:helperTextEnabled="true"
                                app:helperTextTextColor="@color/principal"
                                app:errorEnabled="true"
                                android:hint="Fecha de Nacimiento">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtFechaNac"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_calendar"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="date"
                                    android:imeOptions="flagNoExtractUi"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/dtusuario"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-black"
                        android:shadowColor="@color/secundario"
                        android:shadowRadius="0.6"
                        android:textColor="@color/principal"
                        android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Marque este opción si ud es un docente"
                                app:helperTextEnabled="true"
                                app:helperTextTextColor="@color/secundario">

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/switch_docent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:padding="10dp"
                                    android:gravity="top"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/esDoc" >

                                </com.google.android.material.switchmaterial.SwitchMaterial>

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:id="@+id/datosDocente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/Ldocente"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    app:endIconMode="none"
                                    app:helperText="Nombre o apellido del docente a cargo"
                                    app:helperTextEnabled="true"
                                    app:helperTextTextColor="@color/principal"
                                    app:errorEnabled="true"
                                    android:hint="Docente">

                                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                        android:id="@+id/docente"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:drawableStart="@drawable/user_name"
                                        android:fontFamily="sans-serif-medium"
                                        android:inputType="textPersonName"
                                        android:padding="16dp">

                                    </com.google.android.material.textfield.MaterialAutoCompleteTextView>

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lusuario"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Usuario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtusuario"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_id_24"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="text"
                                    android:maxLength="20"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lclave"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Contraseña"
                                app:endIconMode="password_toggle"
                                app:helperText="Mínimo 6 caracteres"
                                app:helperTextEnabled="true"
                                app:helperTextTextColor="@color/principal">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/clave"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/password"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="textPassword"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/Lconfclave"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorEnabled="true"
                                android:hint="Confirmar contraseña"
                                app:endIconMode="password_toggle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/confclave"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/password"
                                    android:fontFamily="sans-serif-medium"
                                    android:inputType="textPassword"
                                    android:padding="16dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/btnRegister"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/layout_button_rounded_1"
                                android:onClick="RegisterClick"
                                android:text="Crear"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>