<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEFAFB"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".dialogs.Diag_Frg_AyudaEspecial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Encabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo"
            android:text="Ayuda especial"
            android:textColor="#02393D"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_ayuda_especial" />


        <ImageView
            android:id="@+id/img_original"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_below="@id/Encabezado"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/game_activity" />

        <TextView
            android:id="@+id/txt_titulo_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_original"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo"
            android:text="Perro"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_ayudaEspecial"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_below="@id/txt_titulo_original"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_senias" />


        <com.example.tolan.clases.ClssGifImageView
            android:id="@+id/gif_ayudaEspecial"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_below="@id/img_ayudaEspecial"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />


        <Button
            android:id="@+id/btn_comprobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gif_ayudaEspecial"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FE3434"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>
</ScrollView>