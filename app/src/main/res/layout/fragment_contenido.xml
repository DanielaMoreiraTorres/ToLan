<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Frg_Contenido"
    tools:ignore="SpeakableTextPresentCheck">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <RelativeLayout
            android:id="@+id/rl_superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#44cccc" />

            <View
                android:id="@+id/downView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/topView"
                android:background="@drawable/ic_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_superior"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Detalle de Actividades"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/detalle_actividad"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_a単adirEncabezado"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#44cccc"
                android:text="A単adir Encabezado"
                android:textColor="#512DA8" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_DetalleEncabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtdesc"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_a単adirOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#44cccc"
                android:text="A単adir Opciones"
                android:textColor="#512DA8" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_DetalleOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtdesc"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_registrar_detalle_actividades"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button_edit"
            android:minHeight="48dp"

            android:text="Registrar"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>


</ScrollView>