<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.Frg_IdentificarRespuestaPalabra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <ScrollView
            android:layout_marginBottom="10dp"
            android:id="@+id/scrollRT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="30dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/baloo"
                        android:shadowColor="@color/secundario"
                        android:shadowRadius="4"
                        android:text="@string/tituloITxt"
                        android:textColor="@color/secundario"
                        android:textSize="22sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <ListView
                        android:id="@+id/lstEnunciado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#AAFAB1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_tit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:text="Â¡Excelente!"
                        android:textColor="#048710"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_error"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-30dp"
                        android:tint="@color/verde"
                        android:src="@drawable/icon_valor"
                        tools:ignore="UseAppTint" />

                    <Button
                        android:id="@+id/btn_Error"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#FE3434"
                        android:minHeight="48dp"
                        android:text="OK"
                        android:fontFamily="@font/baloo"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/btn_comprobar_actividadesRT"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#12D724"
                        android:minHeight="48dp"
                        android:text="CONTINUAR"
                        android:fontFamily="@font/baloo"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>