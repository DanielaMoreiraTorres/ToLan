<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Niveles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <View
                android:id="@+id/Viewfondo1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/principal" />

            <View
                android:id="@+id/Viewfondo2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Viewfondo1"
                android:background="@drawable/ic_down" />

            <TextView
                android:id="@+id/lblTiTleNiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-black"
                android:shadowColor="@color/secundario"
                android:shadowRadius="4"
                android:text="@string/niveles"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/lblNivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/niv"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/secundario"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtNiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/niv"
                android:layout_weight="1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/buscar"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/search" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/addNivel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/principal"
            android:fontFamily="sans-serif-black"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvNiveles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</RelativeLayout>